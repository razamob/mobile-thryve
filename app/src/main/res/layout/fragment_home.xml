<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#d3d7d7">

        <androidx.cardview.widget.CardView
            android:id="@+id/planyourcareer_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/planyourcareer_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_title"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="Plan Your Career"
                    android:textColor="@color/colorWhite"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/careerImageView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/educational_counseling" />

                <TextView
                    android:id="@+id/planyourcareer_textbody_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_body"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="Unsure of career direction?"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/planyourcareer_textbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_body"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="@string/plan_your_career_body_text"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/planyoureducation_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/planyoureducation_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_title"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="Find the Right Program for You"
                    android:textColor="@color/colorWhite"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/educationImageView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/college" />

                <TextView
                    android:id="@+id/planyoureducation_textbody_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_body"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="Plan Your Education!"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/planyoureducation_textbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_body"
                    android:gravity="left"
                    android:padding="12dp"
                    android:text="@string/plan_your_edu_body_text"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cocurricular_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cocurricular_record_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_title"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="Get involved in co-curricular record activities"
                    android:textColor="@color/colorWhite"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/curricularImageView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/outreach" />

                <TextView
                    android:id="@+id/cocurricular_record_textbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_body"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/cocurricular_body_text"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/findwork_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/findwork_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_title"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="Find Work and Get Hired"
                    android:textColor="@color/colorWhite"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/findWorkImageView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/find_work" />

                <TextView
                    android:id="@+id/findwork_textbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_body"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/find_work_body_text"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/visit_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/visitcentre_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_title"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="Visit the Career Centre"
                    android:textColor="@color/colorWhite"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/visitImageView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/career_centre" />

                <TextView
                    android:id="@+id/visitcentre_textbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_body"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/visit_centre_body_text"
                    android:textColor="@color/colorBlack"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>